<div class="py-16 sm:py-24 bg-brew-light min-h-screen flex items-center justify-center">
  <div class="max-w-md w-full bg-white rounded-[2rem] shadow-xl p-8 sm:p-10">
    <div class="text-center">
      <h2 class="text-4xl font-bebas font-bold text-brew-dark mb-2">Forgot your password?</h2>
      <p class="text-gray-600 mb-8">No problem. Enter your email and we'll send you a password reset link.</p>
    </div>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "space-y-6" }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label :email, class: "sr-only" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", class: "w-full p-3 rounded-full border border-gray-300 focus:outline-none focus:ring-2 focus:ring-brew-brown text-brew-dark" %>
      </div>

      <div class="actions">
        <%= f.submit "Send me reset password instructions", class: "w-full bg-brew-brown text-white font-medium py-3 px-8 rounded-full shadow-lg hover:bg-brew-dark transition-colors duration-300 cursor-pointer" %>
      </div>
    <% end %>

    <div class="mt-8 text-center">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>