<div class="container-custom py-12 px-4">
  <div class="flex justify-between items-center mb-8">
    <h1 class="font-bebas text-5xl text-brew-black">Edit Profile</h1>
    <%= link_to 'Back to Profile', profile_path, class: "bg-gray-200 text-brew-dark font-medium py-2 px-6 rounded-full shadow hover:bg-gray-300 transition-colors duration-300" %>
  </div>

  <div class="bg-white rounded-xl shadow-lg p-8 max-w-2xl mx-auto">
    <%= form_with model: @user, url: profile_path, method: :patch, local: true, multipart: true do |f| %>
      <% if @user.errors.any? %>
        <div class="bg-red-100 text-red-700 p-4 rounded mb-6">
          <h2 class="font-semibold mb-2"><%= pluralize(@user.errors.count, "error") %> prevented this profile from being saved:</h2>
          <ul class="list-disc list-inside">
            <% @user.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="mb-6 text-center">
        <% if @user.profile_picture.attached? %>
          <%= image_tag @user.profile_picture, id: "profile-picture-preview", class: "mx-auto rounded-full shadow-md mb-4 w-28 h-28 object-cover" %>
        <% else %>
          <div id="profile-picture-preview" class="mx-auto rounded-full shadow-md mb-4 w-28 h-28 object-cover bg-gray-200 flex items-center justify-center text-gray-500">
            <svg class="w-12 h-12" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 12c2.7 0 4.8-2.1 4.8-4.8S14.7 2.4 12 2.4 7.2 4.5 7.2 7.2 9.3 12 12 12zm0 2.4c-3.2 0-9.6 1.6-9.6 4.8V22h19.2v-2.8c0-3.2-6.4-4.8-9.6-4.8z"/>
            </svg>
          </div>
        <% end %>

        <%= f.file_field :profile_picture, 
            id: "profile-picture-input", 
            class: "mt-2 text-sm text-gray-600",
            accept: "image/*" %>
        <%= f.hidden_field :cropped_image_data, id: "cropped-image-data" %>
      </div>

      <div class="mb-4">
        <%= f.label :username, "Username", class: "block text-gray-700 font-medium mb-1" %>
        <%= f.text_field :username, class: "w-full border-gray-300 rounded-lg shadow-sm focus:ring-brew-dark focus:border-brew-dark" %>
      </div>

      <div class="mb-4">
        <%= f.label :phone_number, "Phone Number", class: "block text-gray-700 font-medium mb-1" %>
        <%= f.text_field :phone_number, class: "w-full border-gray-300 rounded-lg shadow-sm focus:ring-brew-dark focus:border-brew-dark" %>
      </div>

      <div class="mb-4">
        <%= f.label :email, "Email", class: "block text-gray-700 font-medium mb-1" %>
        <%= f.email_field :email, class: "w-full border-gray-300 rounded-lg shadow-sm focus:ring-brew-dark focus:border-brew-dark" %>
      </div>

      <div class="mb-4">
        <%= f.label :password, "Password (leave blank if unchanged)", class: "block text-gray-700 font-medium mb-1" %>
        <%= f.password_field :password, autocomplete: "new-password", class: "w-full border-gray-300 rounded-lg shadow-sm focus:ring-brew-dark focus:border-brew-dark" %>
      </div>

      <div class="mb-6">
        <%= f.label :password_confirmation, "Confirm Password", class: "block text-gray-700 font-medium mb-1" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full border-gray-300 rounded-lg shadow-sm focus:ring-brew-dark focus:border-brew-dark" %>
      </div>

      <div class="flex justify-center">
        <%= f.submit "Update Profile", class: "bg-brew-dark text-white font-medium py-3 px-8 rounded-full shadow-lg hover:bg-brew-brown transition-colors duration-300" %>
      </div>
    <% end %>

  <div class="border-t border-gray-100 my-6"></div>

  <div class="text-center">
    <div class="mb-4 p-4 bg-red-50 border border-red-200 text-red-700 rounded-md">
      <p class="font-bold">Warning: Account Deletion</p>
      <p class="text-sm mt-1">
        Deleting your account is permanent. All personal data, order history, and saved information will be erased.
      </p>
      <% if @user.orders.exists? %>
        <p class="text-sm mt-2 text-red-800 font-medium">
          ⚠️ You have <%= pluralize(@user.orders.count, "active order") %>. Account deletion is disabled until all orders are removed.
        </p>
      <% end %>
    </div>

    <%= form_tag destroy_account_profile_path,
                method: :delete,
                data: { turbo_confirm: "Are you sure you want to permanently delete your account? This action cannot be undone." } do %>
      <%= submit_tag "Delete Account",
          class: "text-white bg-red-600 font-medium py-2 px-8 rounded-full hover:bg-red-700 transition-colors duration-300 #{'opacity-50 cursor-not-allowed' if @user.orders.exists?}",
          disabled: @user.orders.exists? %>
    <% end %>
  </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
  const fileInput = document.getElementById('profile-picture-input');
  const preview = document.getElementById('profile-picture-preview');
  const croppedDataInput = document.getElementById('cropped-image-data');

  if (fileInput && preview) {
    fileInput.addEventListener('change', function(event) {
      const file = event.target.files[0];
      
      if (file) {
        const reader = new FileReader();
        
        reader.onload = function(e) {
          // If preview is a div (placeholder), replace it with an img
          if (preview.tagName === 'DIV') {
            const img = document.createElement('img');
            img.id = 'profile-picture-preview';
            img.className = 'mx-auto rounded-full shadow-md mb-4 w-28 h-28 object-cover';
            preview.parentNode.replaceChild(img, preview);
            preview = img;
          }
          
          // Set the preview source
          preview.src = e.target.result;
          
          // For now, we'll just use the original image data
          // You can implement cropping functionality later if needed
          croppedDataInput.value = e.target.result;
        };
        
        reader.readAsDataURL(file);
      }
    });
  }
});

