<div class="container-custom py-12 px-4">
    <h1 class="font-bebas text-5xl text-brew-black mb-8">My Orders</h1>

    <% if @orders.any? %>
        <div class="space-y-6">
            <% @orders.each do |order| %>
                <div class="bg-white p-6 rounded-lg shadow-md border border-neutral-200">
                    <div class="flex justify-between items-center border-b pb-4 mb-4">
                        <div>
                            <p class="text-sm text-neutral-600">Order #<%= order.id %></p>
                            <h2 class="text-lg font-bold text-brew-dark">
                                <%= order.created_at.strftime('%B %e, %Y') %>
                            </h2>
                        </div>
                        <span class="text-xl font-bold text-brew-dark">
                            <%= number_to_currency(order.total_cents / 100.0, unit: 'R') %>
                        </span>
                    </div>

                    <div class="space-y-4">
                        <% order.order_items.each do |li| %>
                            <div class="flex items-center space-x-4">
                                <div class="flex-1 min-w-0">
                                    <h3 class="font-semibold text-brew-dark truncate"><%= li.product_name %></h3>
                                    <p class="text-sm text-neutral-600">Quantity: <%= li.quantity %></p>
                                </div>
                                <p class="font-bold text-brew-dark">
                                    <%= number_to_currency((li.quantity * li.unit_price_cents) / 100.0, unit: 'R') %>
                                </p>
                            </div>
                        <% end %>
                    </div>
                </div>
            <% end %>
        </div>
    <% else %>
        <p class="text-neutral-600 text-center py-12">You have not placed any orders yet.</p>
    <% end %>
</div>