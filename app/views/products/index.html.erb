<%= search_form_for @q, url: products_path, method: :get, class: "flex gap-3" do |f| %>
<%= f.search_field :name_cont, placeholder: "Search coffee...", class: "input" %>
<%= f.select :s, options_for_select([['Newest', 'created_at desc'], ['Price: Low→High','price_cents asc'], ['Price: High→Low','price_cents desc']], params.dig(:q,:s)), class: "select" %>
<%= f.submit "Filter", class: "btn" %>
<% end %>