<div class="container-custom py-12 px-4">
<h1 class="font-bebas text-5xl text-brew-brown mb-8">Shopping Cart</h1>

<% if @cart.line_items.any? %>
<div class="grid lg:grid-cols-3 gap-8">
<div class="lg:col-span-2 space-y-4">
<% @cart.line_items.includes(:product).each do |item| %>
<div id="line_item_<%= item.id %>" class="flex items-center space-x-4 border-b border-gray-200 py-4 last:border-b-0">
<div class="w-20 h-20 rounded-lg overflow-hidden flex-shrink-0">
<% if item.product.images.attached? %>
<%= image_tag item.product.images.first.variant(resize_to_fill: [80, 80]).processed,
class: "w-full h-full object-cover" %>
<% else %>
<div class="w-full h-full bg-neutral-200 flex items-center justify-center text-neutral-400 text-xs">
No Image
</div>
<% end %>
</div>

        <div class="flex-1 min-w-0">
          <h3 class="font-semibold text-brew-dark truncate"><%= item.product.name %></h3>
          <p class="text-sm text-brew-brown"><%= item.product.category.name %></p>
          <p class="text-lg font-bold text-brew-dark mt-1">
            <%= number_to_currency(item.unit_price_cents / 100.0, unit: '$') %>
          </p>
        </div>
        
        <div class="flex items-center space-x-3">
          <%= form_with model: @cart, url: update_item_cart_path(id: item.id), method: :patch, local: true, class: "flex items-center space-x-2" do |f| %>
            <%= f.number_field :quantity, value: item.quantity, min: 1, max: 99, 
                class: "w-16 px-2 py-1 text-center border rounded-md focus:outline-none focus:ring-1 focus:ring-brew-brown", 
                onchange: "this.form.submit()" %>
          <% end %>
          
          <%= button_to remove_item_cart_path(id: item.id), method: :delete, 
              class: "text-brew-brown hover:text-red-700 p-1",
              confirm: "Remove this item from cart?" do %>
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
            </svg>
          <% end %>
        </div>
        
        <div class="text-right w-24 flex-shrink-0">
          <p class="font-bold text-lg text-brew-dark">
            <%= number_to_currency((item.quantity * item.unit_price_cents) / 100.0, unit: '$') %>
          </p>
        </div>
      </div>
    <% end %>
    
    <div class="pt-4">
      <%= button_to "Empty Cart", empty_cart_path, method: :delete, 
          class: "bg-brew-brown text-black font-medium py-3 px-8 rounded-full shadow-lg hover:bg-brew-dark transition-colors duration-300",
          confirm: "Are you sure you want to empty your cart?" %>
    </div>
  </div>
  
  <div class="lg:col-span-1">
    <div class="bg-white p-6 rounded-lg shadow-md border border-neutral-200 sticky top-24">
      <h2 class="text-xl font-bold text-brew-dark mb-6">Order Summary</h2>
      
      <div class="space-y-4">
        <div class="flex justify-between">
          <span class="text-neutral-600">Subtotal (<%= @cart.line_items.sum(:quantity) %> items)</span>
          <span class="font-semibold text-brew-dark"><%= number_to_currency(@cart.total_cents / 100.0, unit: '$') %></span>
        </div>
        
        <div class="flex justify-between">
          <span class="text-neutral-600">Shipping</span>
          <span class="font-semibold text-green-600">Free</span>
        </div>
        
        <div class="flex justify-between">
          <span class="text-neutral-600">Tax</span>
          <span class="font-semibold text-brew-dark">Calculated at checkout</span>
        </div>
        
        <hr class="border-neutral-200">
        
        <div class="flex justify-between text-lg">
          <span class="font-bold text-brew-dark">Total</span>
          <span class="font-bold text-brew-dark"><%= number_to_currency(@cart.total_cents / 100.0, unit: '$') %></span>
        </div>
      </div>
      
      <div class="mt-8 space-y-3">
        <% if user_signed_in? %>
          <%= button_to "Proceed to Checkout", checkouts_path, method: :post, 
              class: "w-full bg-brew-brown text-black font-medium py-3 px-8 rounded-full shadow-lg hover:bg-brew-dark transition-colors duration-300" %>
        <% else %>
          <div class="text-center">
            <p class="text-sm text-neutral-600 mb-3">Please sign in to checkout</p>
            <%= link_to "Sign In", new_user_session_path, class: "w-full bg-brew-brown text-black font-medium py-3 px-8 rounded-full shadow-lg hover:bg-brew-dark transition-colors duration-300 text-center" %>
            <p class="text-xs text-neutral-500 mt-2">
              Don't have an account? 
              <%= link_to "Sign up", new_user_registration_path, class: "text-brew-brown hover:text-amber-700 font-medium" %>
            </p>
          </div>
        <% end %>
        
        <%= link_to "Continue Shopping", products_path, class: "w-full btn btn-outline text-center" %>
      </div>
      
      <div class="mt-8 pt-6 border-t border-neutral-200">
        <div class="flex items-center justify-center space-x-4 text-xs text-neutral-500">
          <div class="flex items-center">
            <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"/>
            </svg>
            Secure Checkout
          </div>
          <div class="flex items-center">
            <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
            Free Shipping
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<% else %>
<div class="text-center py-16">
<div class="w-24 h-24 bg-brew-light rounded-full flex items-center justify-center mx-auto mb-6">
<svg class="w-12 h-12 text-brew-brown" fill="none" stroke="currentColor" viewBox="0 0 24 24">
<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4m1.6 8L5 7H2m5 6v6a1 1 0 001 1h8a1 1 0 001-1v-6m-9 0h10"/>
</svg>
</div>
<h2 class="text-2xl font-bold text-brew-dark mb-4">Your cart is empty</h2>
<p class="text-neutral-600 mb-8">Looks like you haven't added any items to your cart yet.</p>
<%= link_to "Start Shopping", products_path, class: "btn btn-primary" %>
</div>
<% end %>

</div>