<div class="container-custom py-12 px-4">
  <div class="flex justify-between items-center mb-8">
    <h1 class="font-bebas text-5xl text-brew-black">User Management</h1>
    <div class="flex space-x-4">
      <%= link_to 'Manage Products', admin_products_path, class: "bg-brew-light text-black font-medium py-3 px-8 rounded-full shadow-lg hover:bg-brew-dark transition-colors duration-300" %>
      <%= link_to 'Manage Categories', admin_categories_path, class: "bg-brew-light text-black font-medium py-3 px-8 rounded-full shadow-lg hover:bg-brew-dark transition-colors duration-300" %>
    </div>
  </div>

  <!-- Search and Filters -->
  <div class="bg-white rounded-xl shadow-lg p-6 mb-8">
    <div class="flex flex-col md:flex-row md:items-center md:justify-between space-y-4 md:space-y-0">
      <!-- Search Form -->
      <div class="flex-1 max-w-md">
        <%= form_with url: admin_users_path, method: :get, local: true, class: "flex space-x-2" do |f| %>
          <%= f.text_field :search, placeholder: "Search by email", value: params[:search],
                class: "flex-1 p-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-brew-dark focus:border-transparent" %>
          <%= f.submit "Search", class: "bg-brew-dark text-white font-medium py-2 px-6 rounded-lg cursor-pointer hover:bg-brew-brown transition-colors duration-300" %>
        <% end %>
      </div>

      <!-- Filters -->
      <div class="flex space-x-2 items-center">
        <span class="text-sm text-neutral-600">Filter by role:</span>
        <div class="relative inline-block text-left">
          <%= link_to 'All', admin_users_path(search: params[:search]), class: "text-sm font-medium py-2 px-4 rounded-lg <%= 'bg-brew-dark text-white' if params[:role].nil? %>" %>
          <%= link_to 'Admin', admin_users_path(search: params[:search], role: 'admin'), class: "text-sm font-medium py-2 px-4 rounded-lg <%= 'bg-brew-dark text-white' if params[:role] == 'admin' %>" %>
          <%= link_to 'User', admin_users_path(search: params[:search], role: 'user'), class: "text-sm font-medium py-2 px-4 rounded-lg <%= 'bg-brew-dark text-white' if params[:role] == 'user' %>" %>
        </div>
      </div>
    </div>
  </div>

  <!-- Users List -->
  <% if @users.any? %>
    <div class="bg-white rounded-xl shadow-lg overflow-hidden">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              Email
            </th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              Role
            </th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              Registration Date
            </th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              Actions
            </th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <% @users.each do |user| %>
            <tr>
              <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                <%= link_to user.email, admin_user_path(user), class: "text-brew-dark hover:underline" %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full <%= user.admin? ? 'bg-indigo-100 text-indigo-800' : 'bg-gray-100 text-gray-800' %>">
                  <%= user.role.capitalize %>
                </span>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                <%= user.created_at.strftime('%B %e, %Y') %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                <%= link_to 'Edit', edit_admin_user_path(user), class: "text-brew-dark hover:underline mr-4" %>
                <%= button_to 'Delete', admin_user_path(user), method: :delete, data: { confirm: 'Are you sure?' }, class: "text-red-600 hover:text-red-900", title: "Delete User" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% else %>
    <div class="text-center py-16">
      <div class="w-24 h-24 bg-brew-light rounded-full flex items-center justify-center mx-auto mb-6">
        <svg class="w-12 h-12 text-brew-brown" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.5v15m7.5-7.5h-15m-4.5-5.25a2.25 2.25 0 012.25-2.25h12.5a2.25 2.25 0 012.25 2.25V18a2.25 2.25 0 01-2.25 2.25H7.5A2.25 2.25 0 015.25 18z" />
        </svg>
      </div>
      <h2 class="text-3xl font-bold text-brew-black mb-2">No users found.</h2>
      <p class="text-neutral-600">
        It seems there are no users registered yet.
      </p>
    </div>
  <% end %>
</div>
