<div class="container-custom py-12 px-4">
  <div class="flex justify-between items-center mb-8">
    <h1 class="font-bebas text-5xl text-brew-black">Product Management</h1>
    
    <div class="hidden sm:flex space-x-4">
      <%= link_to 'Manage Orders', admin_orders_path, class: "bg-brew-light text-black font-medium py-3 px-8 rounded-full shadow-lg hover:bg-brew-dark transition-colors duration-300" %>
      <%= link_to 'Manage Categories', admin_categories_path, class: "bg-brew-light text-black font-medium py-3 px-8 rounded-full shadow-lg hover:bg-brew-dark transition-colors duration-300" %>
      <%= link_to 'Add New Product', new_admin_product_path, class: "bg-brew-light text-black font-medium py-3 px-8 rounded-full shadow-lg hover:bg-brew-dark transition-colors duration-300" %>
    </div>

    <div class="sm:hidden relative">
      <button id="management-menu-btn" class="flex items-center px-4 py-2 border rounded-full text-brew-black hover:bg-neutral-100 transition-colors">
        Manage
        <svg class="h-5 w-5 ml-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
        </svg>
      </button>
      <div id="management-menu" class="absolute right-0 mt-2 w-48 bg-white rounded-md shadow-lg hidden z-10">
        <div class="py-1">
          <%= link_to 'Manage Orders', admin_orders_path, class: "block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100" %>
          <%= link_to 'Manage Categories', admin_categories_path, class: "block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100" %>
          <%= link_to 'Add New Product', new_admin_product_path, class: "block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100" %>
        </div>
      </div>
    </div>
  </div>

  <div class="bg-white rounded-xl shadow-lg p-6 overflow-x-auto">
    <table class="min-w-full divide-y divide-gray-200 hidden md:table">
      <thead class="bg-gray-50">
        <tr>
          <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
            <%= sort_link @q, :name, 'Product' %>
          </th>
          <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Category</th>
          <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
            <%= sort_link @q, :price_cents, 'Price' %>
          </th>
          <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
            <%= sort_link @q, :stock, 'Stock' %>
          </th>
          <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
          <th scope="col" class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
        </tr>
      </thead>
  
      <tbody class="bg-white divide-y divide-gray-200">
        <% @products.each do |product| %>
          <tr>
            <td class="px-6 py-4 whitespace-nowrap">
              <div class="flex items-center">
                <% if product.images.attached? %>
                  <%= image_tag product.images.first, class: "h-10 w-10 rounded-lg object-cover mr-4" %>
                <% end %>
                <div class="text-sm font-medium text-gray-900"><%= product.name %></div>
              </div>
            </td>
            <td class="px-6 py-4 whitespace-nowrap">
              <div class="text-sm text-gray-900"><%= product.category.name if product.category.present? %></div>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">R<%= number_with_precision(product.price_cents / 100.0, precision: 2) %></td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500"><%= product.stock %></td>
            <td class="px-6 py-4 whitespace-nowrap">
              <% if product.active %>
                <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-green-100 text-green-800">Active</span>
              <% else %>
                <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-red-100 text-red-800">Inactive</span>
              <% end %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
              <div class="flex items-center justify-end space-x-2">
                <%= link_to 'Edit', edit_admin_product_path(product), class: "text-brew-brown hover:text-brew-dark" %>
                <%= button_to 'Destroy', admin_product_path(product), method: :delete, data: { turbo_confirm: 'Are you sure?' }, class: "text-red-600 hover:text-red-900" %>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <div class="grid grid-cols-1 gap-4 md:hidden">
      <% @products.each do |product| %>
        <div class="bg-gray-50 rounded-lg shadow-md p-4">
          <div class="flex justify-between items-start mb-2">
            <div class="flex items-center space-x-4">
              <% if product.images.attached? %>
                <%= image_tag product.images.first, class: "h-12 w-12 rounded-lg object-cover" %>
              <% end %>
              <div>
                <h3 class="text-lg font-semibold text-gray-900"><%= product.name %></h3>
                <p class="text-sm text-gray-500"><%= product.category.name if product.category.present? %></p>
              </div>
            </div>
            <% if product.active %>
              <span class="px-2 py-0.5 text-xs leading-5 font-semibold rounded-full bg-green-100 text-green-800">Active</span>
            <% else %>
              <span class="px-2 py-0.5 text-xs leading-5 font-semibold rounded-full bg-red-100 text-red-800">Inactive</span>
            <% end %>
          </div>

          <div class="flex justify-between items-center mb-4">
            <div>
              <p class="text-sm text-gray-500">Price</p>
              <p class="text-base font-medium text-gray-900">R<%= number_with_precision(product.price_cents / 100.0, precision: 2) %></p>
            </div>
            <div>
              <p class="text-sm text-gray-500">Stock</p>
              <p class="text-base font-medium text-gray-900"><%= product.stock %></p>
            </div>
          </div>
          
          <div class="flex justify-between space-x-2 text-sm font-medium">
            <%= link_to 'Edit', edit_admin_product_path(product), class: "w-full text-center px-4 py-2 rounded-lg border border-brew-brown text-brew-brown hover:bg-brew-brown hover:text-white transition-colors duration-300" %>
            <%= button_to 'Destroy', admin_product_path(product), method: :delete, data: { turbo_confirm: 'Are you sure?' }, class: "w-full text-center px-4 py-2 rounded-lg border border-red-600 text-red-600 hover:bg-red-600 hover:text-white transition-colors duration-300" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    // For the new management dropdown
    const managementBtn = document.getElementById('management-menu-btn');
    const managementMenu = document.getElementById('management-menu');

    if (managementBtn && managementMenu) {
      managementBtn.addEventListener('click', (event) => {
        event.stopPropagation();
        managementMenu.classList.toggle('hidden');
      });

      // Close the dropdown if the user clicks outside of it
      document.addEventListener('click', (event) => {
        if (!managementMenu.contains(event.target) && !managementBtn.contains(event.target)) {
          managementMenu.classList.add('hidden');
        }
      });
    }
  });
</script>