<div class="container-custom py-12 px-4">
    <h1 class="font-bebas text-5xl text-brew-black mb-8">All Products</h1>

    <% if @products.any? %>
        <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-8">
            <% @products.each do |product| %>
                <div class="bg-white rounded-lg shadow-md overflow-hidden">
                    <% if product.images.attached? %>
                        <%= image_tag product.images.first, class: "w-full h-48 object-cover" %>
                    <% end %>
                    <div class="p-4">
                        <h2 class="text-xl font-bold text-brew-dark mb-2"><%= link_to product.name, product %></h2>
                        <p class="text-neutral-600 mb-4"><%= product.description.truncate(80) %></p>
                        <p class="font-bold text-lg text-brew-brown"><%= number_to_currency(product.price_cents / 100.0) %></p>
                    </div>
                </div>
            <% end %>
        </div>
    <% else %>
        <div class="text-center py-16">
            <h2 class="text-2xl font-bold text-brew-dark mb-4">No products found.</h2>
            <p class="text-neutral-600">We're brewing up something new. Please check back later!</p>
        </div>
    <% end %>
</div>