<section class="bg-white">
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 py-10 grid grid-cols-1 md:grid-cols-3 gap-8">
    <% [["10K+","Happy Customers"],["50k+","Cups Brewed"],["50+","Unique Blends"]].each_with_index do |(num,label),i| %>
      <div class="text-center">
        <div class="inline-flex items-center justify-center w-36 h-36 rounded-full border-2 border-brew-orange">
          <span class="font-display text-5xl"><%= num %></span>
        </div>
        <div class="mt-3 text-sm text-neutral-600"><%= label %></div>
      </div>
    <% end %>
  </div>
</section>
