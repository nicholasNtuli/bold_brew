<div class="container-custom py-12 px-4">
  <div class="flex justify-between items-center mb-8">
    <h1 class="font-bebas text-5xl text-brew-black">Product Management</h1>
    <div class="flex space-x-4">
      <%= link_to 'Manage Orders', admin_orders_path, class: "bg-brew-light text-black font-medium py-3 px-8 rounded-full shadow-lg hover:bg-brew-dark transition-colors duration-300" %>
      <%= link_to 'Manage Categories', admin_categories_path, class: "bg-brew-light text-black font-medium py-3 px-8 rounded-full shadow-lg hover:bg-brew-dark transition-colors duration-300" %>
      <%= link_to 'Add New Product', new_admin_product_path, class: "bg-brew-light text-black font-medium py-3 px-8 rounded-full shadow-lg hover:bg-brew-dark transition-colors duration-300" %>
    </div>
  </div>

  <div class="bg-white rounded-xl shadow-lg p-6 overflow-x-auto">
    <table class="min-w-full divide-y divide-gray-200">
     <thead class="bg-gray-50">
        <tr>
          <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
            <%= sort_link @q, :name, 'Product' %>
          </th>
          <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Category</th>
          <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
            <%= sort_link @q, :price_cents, 'Price' %>
          </th>
          <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
            <%= sort_link @q, :stock, 'Stock' %>
          </th>
          <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
          <th scope="col" class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
        </tr>
      </thead>
  
      <tbody class="bg-white divide-y divide-gray-200">
        <% @products.each do |product| %>
          <tr>
            <td class="px-6 py-4 whitespace-nowrap">
              <div class="flex items-center">
                <% if product.images.attached? %>
                  <%= image_tag product.images.first, class: "h-10 w-10 rounded-lg object-cover mr-4" %>
                <% end %>
                <div class="text-sm font-medium text-gray-900"><%= product.name %></div>
              </div>
            </td>
            <td class="px-6 py-4 whitespace-nowrap">
              <div class="text-sm text-gray-900"><%= product.category.name if product.category.present? %></div>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">R<%= number_with_precision(product.price_cents / 100.0, precision: 2) %></td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500"><%= product.stock %></td>
            <td class="px-6 py-4 whitespace-nowrap">
              <% if product.active %>
                <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-green-100 text-green-800">Active</span>
              <% else %>
                <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-red-100 text-red-800">Inactive</span>
              <% end %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
              <div class="flex items-center justify-end space-x-2">
                <%= link_to 'Edit', edit_admin_product_path(product), class: "text-brew-brown hover:text-brew-dark" %>
                <%= button_to 'Destroy', admin_product_path(product), method: :delete, data: { turbo_confirm: 'Are you sure?' }, class: "text-red-600 hover:text-red-900" %>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>