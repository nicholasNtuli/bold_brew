<div class="container-custom py-12 px-4">
  <div class="flex justify-between items-center mb-8">
    <h1 class="font-bebas text-5xl text-brew-black">Edit Profile</h1>
    <div class="flex space-x-4">
      <%= link_to 'â† Back to Profile', profile_path, class: "bg-brew-light text-black font-medium py-3 px-8 rounded-full shadow-lg hover:bg-brew-dark transition-colors duration-300" %>
    </div>
  </div>

  <div class="bg-white rounded-xl shadow-lg p-8 max-w-md mx-auto">
    <%= form_with model: @user, url: profile_path, method: :patch, local: true do |form| %>
      <% if @user.errors.any? %>
        <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-4" role="alert">
          <strong class="font-bold">Error!</strong>
          <span class="block sm:inline">
            <%= @user.errors.full_messages.join(', ') %>
          </span>
        </div>
      <% end %>

      <div class="mb-4">
        <%= form.label :email, class: "block text-sm font-medium text-gray-700" %>
        <%= form.email_field :email, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-brew-dark focus:ring-brew-dark sm:text-sm" %>
      </div>

      <div class="mb-4">
        <%= form.label :role, class: "block text-sm font-medium text-gray-700" %>
        <%= form.select :role, User.roles.keys.map { |role| [role.capitalize, role] }, {}, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-brew-dark focus:ring-brew-dark sm:text-sm" %>
      </div>
      
      <%= form.submit "Update Profile", class: "w-full bg-brew-dark text-white font-medium py-2 px-4 rounded-lg cursor-pointer hover:bg-brew-brown transition-colors duration-300" %>
    <% end %>

    <!-- Account Deletion -->
    <div class="mt-8 border-t pt-8 border-gray-200">
      <h2 class="text-2xl font-semibold mb-2 text-red-600">Danger Zone</h2>
      <p class="text-neutral-600 mb-4">
        Deleting your account is permanent. All your data will be removed.
      </p>
      <%= button_to 'Delete Account', destroy_account_profile_path, method: :delete, data: { confirm: 'Are you absolutely sure you want to delete your account?' }, class: "w-full bg-red-600 text-white font-medium py-2 px-4 rounded-lg cursor-pointer hover:bg-red-700 transition-colors duration-300" %>
    </div>
  </div>
</div>
