<div class="container-custom py-12 px-4">
  <div class="flex justify-between items-center mb-8">
    <h1 class="font-bebas text-5xl text-brew-black">Edit Profile</h1>
    <%= link_to 'Back to Profile', profile_path, class: "bg-gray-200 text-brew-dark font-medium py-2 px-6 rounded-full shadow hover:bg-gray-300 transition-colors duration-300" %>
  </div>

  <div class="bg-white rounded-xl shadow-lg p-8 max-w-2xl mx-auto">
    <%= form_for(@user, url: profile_path, html: { multipart: true }) do |f| %>
      <% if @user.errors.any? %>
        <div class="bg-red-100 text-red-700 p-4 rounded mb-6">
          <h2 class="font-semibold mb-2"><%= pluralize(@user.errors.count, "error") %> prevented this profile from being saved:</h2>
          <ul class="list-disc list-inside">
            <% @user.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      
      <!-- Profile Picture Upload + Preview -->
      <div class="mb-6 text-center">
        <% if @user.profile_picture.attached? %>
          <%= image_tag @user.profile_picture.variant(resize_to_fill: [120, 120]), id: "profile-picture-preview", class: "mx-auto rounded-full shadow-md mb-4" %>
        <% else %>
          <img id="profile-picture-preview" class="mx-auto rounded-full shadow-md mb-4 w-28 h-28 object-cover bg-gray-200" />
        <% end %>

        <%= f.file_field :profile_picture, id: "profile-picture-input", class: "mt-2 text-sm text-gray-600" %>

        <!-- Hidden field for cropped image data -->
        <%= f.hidden_field :cropped_image_data, id: "cropped-image-data" %>
      </div>

      <!-- Username -->
      <div class="mb-4">
        <%= f.label :username, "Username", class: "block text-gray-700 font-medium mb-1" %>
        <%= f.text_field :username, class: "w-full border-gray-300 rounded-lg shadow-sm focus:ring-brew-dark focus:border-brew-dark" %>
      </div>

      <!-- Phone -->
      <div class="mb-4">
        <%= f.label :phone_number, "Phone Number", class: "block text-gray-700 font-medium mb-1" %>
        <%= f.text_field :phone_number, class: "w-full border-gray-300 rounded-lg shadow-sm focus:ring-brew-dark focus:border-brew-dark" %>
      </div>

      <!-- Email -->
      <div class="mb-4">
        <%= f.label :email, "Email", class: "block text-gray-700 font-medium mb-1" %>
        <%= f.email_field :email, class: "w-full border-gray-300 rounded-lg shadow-sm focus:ring-brew-dark focus:border-brew-dark" %>
      </div>

      <!-- Password -->
      <div class="mb-4">
        <%= f.label :password, "Password (leave blank if unchanged)", class: "block text-gray-700 font-medium mb-1" %>
        <%= f.password_field :password, autocomplete: "new-password", class: "w-full border-gray-300 rounded-lg shadow-sm focus:ring-brew-dark focus:border-brew-dark" %>
      </div>

      <!-- Confirm Password -->
      <div class="mb-6">
        <%= f.label :password_confirmation, "Confirm Password", class: "block text-gray-700 font-medium mb-1" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full border-gray-300 rounded-lg shadow-sm focus:ring-brew-dark focus:border-brew-dark" %>
      </div>

      <!-- Submit -->
      <div class="flex justify-center">
        <%= f.submit "Update Profile", class: "bg-brew-dark text-white font-medium py-3 px-8 rounded-full shadow-lg hover:bg-brew-brown transition-colors duration-300" %>
      </div>
    <% end %>
  </div>
</div>
