<div class="container-custom py-12 px-6">
  <div class="grid lg:grid-cols-2 gap-12">
    <div class="h-full">
      <div class="w-[550px] h-[550px] mx-auto rounded-2xl overflow-hidden bg-neutral-50 shadow-lg flex items-center justify-center">
        <% if @product.images.attached? %>
          <%= image_tag @product.images.first.variant(resize_to_fill: [600, 600]).processed,
              class: "object-contain",
              alt: @product.name %>
        <% else %>
          <div class="w-full h-full flex items-center justify-center text-neutral-400">
            <div class="text-center">
              <div class="text-8xl mb-4">â˜•</div>
              <p class="text-lg">No image available</p>
            </div>
          </div>
        <% end %>
      </div>
      
      <% if @product.images.count > 1 %>
        <div class="grid grid-cols-4 gap-2 mt-4">
          <% @product.images.each do |image| %>
            <div class="aspect-square rounded-lg overflow-hidden bg-neutral-50 cursor-pointer hover:ring-2 hover:ring-amber-400 transition-all shadow-md">
              <%= image_tag image.variant(resize_to_fill: [150, 150]).processed,
                  class: "w-full h-full object-cover" %>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
    
    <div class="space-y-6">
      <div>
        <div class="flex items-center gap-2 mb-2">
          <%= link_to @product.category.name, category_path(@product.category), 
              class: "text-sm font-medium text-amber-600 hover:text-amber-700" %>
          <% if @product.stock && @product.stock > 0 %>
            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
              In Stock
            </span>
          <% else %>
            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800">
              Out of Stock
            </span>
          <% end %>
        </div>
        <h1 class="text-3xl md:text-4xl font-bold text-neutral-900 mb-4"><%= @product.name %></h1>
        <div class="flex items-center gap-4 mb-4">
          <span class="text-3xl font-bold text-neutral-900">
            <%= number_to_currency(@product.price_cents / 100.0, unit: '$') %>
          </span>
          <% if @product.sku %>
            <span class="text-sm text-neutral-500">SKU: <%= @product.sku %></span>
          <% end %>
        </div>
      </div>
      
      <% if @product.description.present? %>
        <div class="prose prose-neutral max-w-none">
          <%= simple_format(@product.description) %></p>
        </div>
      <% end %>
      
      <div class="space-y-4">
        <%= form_with url: add_item_cart_path(product_id: @product), method: :post, local: true, class: "space-y-4" do |f| %>
          <div class="flex items-center space-x-4">
            <label class="font-medium text-neutral-900">Quantity:</label>
            <%= f.number_field :quantity, value: 1, min: 1, max: 99, 
                class: "quantity-input w-20" %>
            <% if @product.stock && @product.stock > 0 %>
              <span class="text-sm text-neutral-500"><%= @product.stock %> available</span>
            <% end %>
          </div>

          <div class="flex items-center gap-4 mt-4">
            <% if @product.active? && @product.stock.to_i > 0 %>
              <%= f.submit "Add to Cart", class: "w-full bg-brew-light text-black font-medium py-3 px-8 rounded-full shadow-lg hover:bg-brew-dark transition-colors duration-300 cursor-pointer" %>
            <% else %>
              <button disabled class="w-full bg-brew-light text-black font-medium py-3 px-8 rounded-full shadow-lg transition-colors duration-300 opacity-50 cursor-not-allowed">
                Out of Stock
              </button>
            <% end %>

            <%= link_to "#", class: "bg-brew-light text-black font-medium p-3 rounded-full shadow-lg hover:bg-brew-dark transition-colors duration-300" do %>
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"/>
              </svg>
            <% end %>

            <%= link_to "#", class: "bg-brew-light text-black font-medium p-3 rounded-full shadow-lg hover:bg-brew-dark transition-colors duration-300" do %>
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.684 13.342C8.886 12.938 9 12.482 9 12c0-.482-.114-.938-.316-1.342m0 2.684a3 3 0 110-2.684m0 2.684l6.632 3.316m-6.632-6l6.632-3.316m0 0a3 3 0 105.367-2.684 3 3 0 00-5.367 2.684zm0 9.316a3 3 0 105.367 2.684 3 3 0 00-5.367-2.684z"/>
              </svg>
            <% end %>
          </div>
        <% end %>
      </div>
      
      <div class="border-t border-neutral-200 pt-6">
        <h3 class="font-bold text-neutral-900 mb-4">Product Features</h3>
        <div class="grid grid-cols-2 gap-4">
          <div class="flex items-center space-x-2">
            <svg class="w-5 h-5 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
            <span class="text-sm text-neutral-700">100% Organic</span>
          </div>
          <div class="flex items-center space-x-2">
            <svg class="w-5 h-5 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
            <span class="text-sm text-neutral-700">Low Acid</span>
          </div>
          <div class="flex items-center space-x-2">
            <svg class="w-5 h-5 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
            <span class="text-sm text-neutral-700">24h Cold Brew</span>
          </div>
          <div class="flex items-center space-x-2">
            <svg class="w-5 h-5 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
            <span class="text-sm text-neutral-700">Nitro Smooth</span>
          </div>
        </div>
      </div>
      
      <div class="border-t border-neutral-200 pt-6">
        <div class="space-y-3">
          <div class="flex items-center space-x-3 text-sm">
            <svg class="w-5 h-5 text-amber-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"/>
            </svg>
            <span class="text-neutral-700"><strong>Free shipping</strong> on orders over $50</span>
          </div>
          <div class="flex items-center space-x-3 text-sm">
            <svg class="w-5 h-5 text-amber-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
            <span class="text-neutral-700"><strong>Same-day delivery</strong> in select areas</span>
          </div>
          <div class="flex items-center space-x-3 text-sm">
            <svg class="w-5 h-5 text-amber-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
            <span class="text-neutral-700"><strong>30-day</strong> satisfaction guarantee</span>
          </div>
        </div>
      </div>
    </div>
  </div>
  
  <% related_products = @product.category.products.where(active: true).where.not(id: @product.id).limit(4) %>
  <% if related_products.any? %>
    <div class="mt-20">
      <h2 class="text-3xl font-bold text-neutral-900 mb-6">Related Products</h2>
      <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-8">
        <% related_products.each do |related_product| %>
          <div class="bg-white rounded-lg shadow-md overflow-hidden">
            <%= link_to related_product do %>
              <% if related_product.images.attached? %>
                <%= image_tag related_product.images.first, class: "w-full h-64 object-cover" %>
              <% else %>
                <%= image_tag "placeholder.png", class: "w-full h-64 object-cover", alt: "No image available" %>
              <% end %>
            <% end %>
            <div class="p-4">
              <h3 class="text-xl font-bold text-neutral-900 mb-2">
                <%= link_to related_product.name, related_product %>
              </h3>
              <p class="text-neutral-600 mb-4"><%= related_product.description.truncate(80) %></p>
              <p class="font-bold text-lg text-neutral-900">
                <%= number_to_currency(related_product.price_cents / 100.0) %>
              </p>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>
</div>