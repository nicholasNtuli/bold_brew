<%# locals: title:, body:, cta_text:, image:, image_left: (true/false) %>
<section class="py-16">
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 grid md:grid-cols-2 gap-12 items-center">
    <% if local_assigns[:image_left] %>
      <div class="brew-arc-left">
        <%= image_tag image, class: "rounded-2xl w-full max-w-md mx-auto shadow" %>
      </div>
      <div>
        <h2 class="text-2xl md:text-4xl font-semibold"><%= title %></h2>
        <p class="mt-4 text-neutral-700"><%= body %></p>
        <a href="<%= products_path %>" class="inline-block mt-6 px-5 py-3 rounded-lg bg-brew-orange text-white"><%= cta_text %></a>
      </div>
    <% else %>
      <div>
        <h2 class="text-2xl md:text-4xl font-semibold"><%= title %></h2>
        <p class="mt-4 text-neutral-700"><%= body %></p>
        <a href="<%= products_path %>" class="inline-block mt-6 px-5 py-3 rounded-lg bg-brew-orange text-white"><%= cta_text %></a>
      </div>
      <div class="brew-arc-right">
        <%= image_tag image, class: "rounded-2xl w-full max-w-md mx-auto shadow" %>
      </div>
    <% end %>
  </div>
</section>
