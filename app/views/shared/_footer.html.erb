<footer class="mt-20 border-t border-neutral-200 bg-white">
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 py-12 grid gap-8 md:grid-cols-4">
    <div>
      <div class="font-display text-3xl">Bold Brew</div>
      <p class="mt-3 text-sm text-neutral-600">Brewing success one sip at a time.</p>
      <div class="mt-4 flex gap-3 text-xl">
        <a href="#" aria-label="Instagram">📸</a>
        <a href="#" aria-label="X">𝕏</a>
        <a href="#" aria-label="YouTube">▶️</a>
      </div>
    </div>
    <div>
      <h3 class="font-medium mb-3">Company</h3>
      <ul class="space-y-2 text-sm text-neutral-700">
        <li><%= link_to "About", about_path %></li>
        <li><%= link_to "Contact", contact_path %></li>
      </ul>
    </div>
    <div>
      <h3 class="font-medium mb-3">Shop</h3>
      <ul class="space-y-2 text-sm text-neutral-700">
        <li><%= link_to "All Products", products_path %></li>
        <li><a href="#">Gift Cards</a></li>
      </ul>
    </div>
    <div>
      <h3 class="font-medium mb-3">Newsletter</h3>
      <form class="flex gap-2">
        <input type="email" required placeholder="you@example.com"
               class="flex-1 px-3 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-brew-orange">
        <button class="px-4 py-2 rounded-lg bg-brew-orange text-white">Subscribe</button>
      </form>
    </div>
  </div>
  <div class="border-t border-neutral-200 py-6 text-center text-xs text-neutral-500">
    © <%= Time.current.year %> Bold Brew
  </div>
</footer>
