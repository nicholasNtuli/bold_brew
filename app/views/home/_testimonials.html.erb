<section class="py-16">
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    <h2 class="text-center text-2xl md:text-4xl font-semibold">What Our Clients Say</h2>
    <div class="mt-10 grid gap-6 md:grid-cols-2">
      <% [
        ["Ava F.", "“The smoothest cold brew. I crush my mornings now.”"],
        ["Liam R.", "“Perfect balance of flavor and kick. On repeat.”"]
      ].each do |name, quote| %>
        <figure class="rounded-2xl border p-6 bg-white">
          <blockquote class="text-neutral-800"><%= quote %></blockquote>
          <figcaption class="mt-4 text-sm text-neutral-600">— <%= name %></figcaption>
        </figure>
      <% end %>
    </div>
  </div>
</section>
