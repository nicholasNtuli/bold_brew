<div class="container-custom py-12 px-4">
  <div class="flex justify-between items-center mb-8">
    <h1 class="font-bebas text-5xl text-brew-black">My Profile</h1>
    <div class="flex space-x-4">
      <%= link_to 'Edit Profile', edit_profile_path, class: "bg-brew-dark text-white font-medium py-3 px-8 rounded-full shadow-lg hover:bg-brew-brown transition-colors duration-300" %>
    </div>
  </div>

  <div class="bg-white rounded-xl shadow-lg p-8 max-w-2xl mx-auto text-center">
    <!-- Profile Image -->
    <% if @user.profile_picture.attached? %>
      <%= image_tag @user.profile_picture.variant(resize_to_fill: [120, 120]), class: "mx-auto rounded-full shadow-md mb-4" %>
    <% else %>
      <div class="w-28 h-28 mx-auto mb-4 rounded-full bg-gray-200 flex items-center justify-center text-gray-500">
        <svg class="w-12 h-12" fill="currentColor" viewBox="0 0 24 24">
          <path d="M12 12c2.7 0 4.8-2.1 4.8-4.8S14.7 2.4 12 2.4 7.2 4.5 7.2 7.2 9.3 12 12 12zm0 2.4c-3.2 0-9.6 1.6-9.6 4.8V22h19.2v-2.8c0-3.2-6.4-4.8-9.6-4.8z"/>
        </svg>
      </div>
    <% end %>

    <!-- Username -->
    <h2 class="text-2xl font-semibold text-brew-dark mb-2">
      <%= @user.username.presence || "No username set" %>
    </h2>

    <div class="text-neutral-600 text-left mt-6">
      <p><strong>Email:</strong> <%= @user.email %></p>
      <p><strong>Phone:</strong> <%= @user.phone_number.presence || "Not provided" %></p>
      <p><strong>Role:</strong> <%= @user.role.capitalize %></p>
      <p><strong>Joined:</strong> <%= @user.created_at.strftime('%B %e, %Y') %></p>
    </div>
  </div>
</div>
